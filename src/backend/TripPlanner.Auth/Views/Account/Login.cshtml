@model LoginViewModel

<div class="login-page">
    <div class="page-header">
        <h3>Welcome !</h3>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Login</h3>
                    </div>
                    <div class="panel-body login-panel">

                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />
   
                            <fieldset>
                                <div class="input-group form-group">
                                    <div class="input-group-addon"><img src="/lib/icons/envelope.svg" alt="" width="16" height="16" title="Email"></div>
                                    <input type="text" class="form-control" placeholder="Email" asp-for="Email" autofocus>
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-addon"><img src="/lib/icons/lock.svg" alt="" width="16" height="16" title="Email"></div>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                </div>
                                @if (Model.AllowRememberLogin)
                                {
                                    <div class="form-group login-remember">
                                        <label asp-for="RememberLogin">
                                            <input asp-for="RememberLogin">
                                            <strong>Remember Me</strong>
                                        </label>
                                    </div>
                                }
                                <div class="form-group">
                                    <button class="btn btn-primary btn-form" name="button" value="login">Login</button>
                                </div>
                                
                            </fieldset>
                        </form>
                        <div class="panel-footer">
                            Don't have an account ? <a href="@Url.Action("Register", "Account", new {returnUrl = Model.ReturnUrl})">Sign up now</a>
                            <br>
                            <a href="@Url.Action("ForgotPassword", "Account")">Forgot password ?</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>