@model RegisterViewModel

<div class="register-page">
    <div class="page-header">
        <h3>Join us!</h3>
    </div>
    <div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Register</h3>
            </div>
            <div class="panel-body">
                <form asp-route="Register">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <fieldset>
                        <div class="input-group form-group">
                            <div class="input-group-addon"><img src="/lib/icons/user.svg" alt="" width="16" height="16" title="Username"></div>
                            <input type="text" class="form-control" placeholder="Username" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><img src="/lib/icons/envelope.svg" alt="" width="16" height="16" title="Email"></div>
                                <input type="text" class="form-control" placeholder="Email" asp-for="Email" >
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><img src="/lib/icons/lock.svg" alt="" width="16" height="16" title="Password"></div>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group form-group">
                                <div class="input-group-addon"><img src="/lib/icons/lock.svg" alt="" width="16" height="16" title="ConfirmPassword"></div>
                                <input type="password" class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword">
                            </div>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-form">Register</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
