{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Users": "Data Source=.;Initial Catalog=PlanYourTripUsers;Integrated Security=True;"
  },
  //https://github.com/serilog/serilog/wiki/Configuration-Basics
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      //Verbose, Debug, Information, Warning, Error, Fatal
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{ThreadId}][{Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs/log_{Date}.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{ThreadId}][{Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",

          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "retainedFileCountLimit": "28"
        }
      }
    ]
  }
}
