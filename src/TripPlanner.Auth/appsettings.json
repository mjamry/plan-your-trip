{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Users": "Data Source=.;Initial Catalog=PlanYourTripUsers;Integrated Security=True;"
  },
  "IdentityServer": {
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "",
        "ClientName": "",
        "AllowedGrantTypes": [ "implicit" ],
        "AllowAccessTokensViaBrowser": true,
        "AccessTokenType": 0,
        "AlwaysSendClientClaims": true,
        "AlwaysIncludeUserClaimsInIdToken": true,
        "RequireConsent": false,
        "RedirectUris": [ "" ],
        "PostLogoutRedirectUris": [ "" ],
        "AllowedCorsOrigins": [ "" ],
        "AllowedScopes": [ "openid", "email", "profile", "" ]
      }
    ]
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{ThreadId}][{Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs/log_{Date}.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{ThreadId}][{Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",

          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "retainedFileCountLimit": "28"
        }
      }
    ]
  }
}